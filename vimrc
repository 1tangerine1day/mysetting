" UI setting
set t_Co=256
"let g:molokai_original = 1
colorscheme louiehu
set background=dark
syntax on

" basic setting
set cursorline
"set autoindent
"set smartindent
set cindent
set ts=4
set nu

" Search setting
set hlsearch
set incsearch
set ignorecase
set smartcase

" File setting
set fileencoding=utf-8
set enc=utf-8
set fileencodings=utf-8,big5,euc-jp
set termencoding=utf-8
"set encoding=big5
"set fileencoding=big5
"set termencoding=big5
"set fileencodings=big5,utf-8,euc-jp,gbk,euc-kr,utf-bom,iso8859-1

 " hot key
 nnoremap L :set mouse=a<CR>
 nnoremap l :set mouse-=a<CR>
